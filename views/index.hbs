{{!-- Landing Page --}}

<section id="landing" class="container mt-sm-1 mb-5">

  <div class="row justify-content-md-center">
    <div class="col-lg pb-md-1 p-5 ">
      <img src="/images/home-page/landing7.svg" alt="landing page photo" width="100%">
    </div>

    <div class="col-lg mt-lg-5 ml-lg-1 pt-lg-5 pr-lg-5 text-lg-left text-center">
      <h1 class="mt-4 text-dark">Learning Platform</h1>
      <p class="mt-3 text-secondary">"Knowledge shared is knowledge squared"<br>
        A knowledge sharing platform for Ironhackers and Javascript learners to keep track of their learning materials.
      </p>
      {{#if isConnected}}
      <a href="/tutorials/all" class="btn btn-outline-blue mt-3 mr-4">Let's Learn Now</a>
      <a href="/share" class="btn btn-outline-red mt-3">Share a Tutorial</a>
      {{else}}
      <a href="/auth/signup" class="btn btn-outline-blue mt-3">Create new account</a>
      {{/if}}
    </div>

  </div>
</section>

{{!-- Features --}}
<section id="feature" class="container rounded bg-light p-3">
  <div class="row">
    <div class="col-lg card m-2 pt-4 pb-4 shadow-sm">
      <i class="icon-primary text-center mt-3 fas fa-graduation-cap fa-4x"></i>
      <div class="card-body text-center">
        <h5 class="card-title text-dark">Learn</h5>
        <p class="card-text text-secondary">See all relevent topics about Javascript and learn something new today.
        </p>
        <a href="/tutorials/all" class="btn btn-outline-blue">Let's Learn</a>
      </div>
    </div>

    <div class="col-lg card m-2 pt-4 pb-4 shadow-sm">
      <i class="icon-red text-center mt-3 fab fa-gratipay fa-4x"></i>
      <div class="card-body text-center">
        <h5 class="card-title text-dark">Like</h5>
        <p class="card-text text-secondary">Like and save tutorials in your profile to keep your study
          organised.
        </p>
        <a href="/profile" class="btn btn-outline-red">View Profile</a>
      </div>
    </div>

    <div class="col-lg card m-2 pt-4 pb-4 shadow-sm">
      <i class="icon-primary text-center mt-3 fab fa-slideshare fa-4x"></i>
      <div class="card-body text-center">
        <h5 class="card-title text-dark">Share</h5>
        <p class="card-text text-secondary">Sharing is caring. <br>
          Let's share a tutorial today!
        </p>
        <a href="/share" class="btn btn-outline-blue">Share Tutorial</a>
      </div>
    </div>
  </div>
</section>